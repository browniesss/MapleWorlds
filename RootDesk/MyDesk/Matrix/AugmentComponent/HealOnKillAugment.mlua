@Component
script HealOnKillAugment extends BaseMatrixAugmentComponent

	method void OnKill(Entity victim)
		local unit = self.Entity.Unit
		if unit == nil then
			return
		end
		
		local healAmount = 0
		if self.calcType == "PERCENT" then
			healAmount = unit.maxHP * self.value
		elseif self.calcType == "FLAT" then
			healAmount = self.value
		end
		
		unit:OnHeal(self.Entity, healAmount)
	end

end