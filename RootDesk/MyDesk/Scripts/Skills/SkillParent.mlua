@Component
script SkillParent extends Component

	@Sync
	property Entity caster = nil

	@Sync
	property Entity target = nil

	@Sync
	property Vector2 skillArea = Vector2(0,0)

	@Sync
	property number skillAmount = 0

	@Sync
	property number skillProjectileSpeed = 0

	@Sync
	property number skillTime = 0

	method void InitializeSkill(Entity caster, Entity target)
		self.caster = caster
		self.target = target
		
	end

	method void UseSkill(Entity caster, Entity target)
		self:InitializeSkill(caster, target)
		self:ActivateSkill()
		self:DestroySkill()
	end

	@ExecSpace("Client")
	method void ActivateSkill()
		
	end

	method void DestroySkill()
		self.Entity:Destroy(3)
	end

end