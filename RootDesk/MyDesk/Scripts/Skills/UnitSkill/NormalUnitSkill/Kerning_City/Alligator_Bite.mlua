@Component
script Alligator_Bite extends SkillParent

	@ExecSpace("Client")
	method void ActivateSkill()
		__base:ActivateSkill()
		
		_EffectService:PlayEffectAttached("1af89c3e49084396889f3c13e7512cfc", self.caster, Vector3.zero, 0, Vector3.one)
		
		-- Tween 끝난 뒤 후처리
		_TimerService:SetTimerOnce(function()
		    _EffectService:PlayEffectAttached("65d678f3062b4d2cadb129770f732498", self.target, Vector3.zero, 0, Vector3.one)
			self.target.Unit:OnHit(self.caster, self.skillAmount, false, 1)
			-- 스킬 사용 종료 처리
			self:SkillEnd()
		end, self.skillAttackTiming)
	end

end