@Component
script EnemyHealthBar extends Component

	@Sync
	property SliderComponent myHP = nil

	@Sync
	property Entity tower = nil

	method void OnBeginPlay()
		self.myHP = self.Entity.Children[1].SliderComponent
		self.myHP.Value = 1
	end

	method void OnUpdate(number delta)
		if self.tower == nil then
			return 
		end
		
		self.myHP.Value = self.tower.Unit.hp / self.tower.Unit.maxHP
	end

end